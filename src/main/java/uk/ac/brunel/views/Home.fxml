<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="538.0" prefWidth="909.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uk.ac.brunel.controllers.HomeController">
   <AnchorPane prefHeight="401.0" prefWidth="515.0">
      <children>
      
          <Button fx:id="helloButton" layoutX="530.0" layoutY="62.0" onAction="#handleButtonClick" text="Search" />
         <TextField fx:id="textField" layoutX="180.0" layoutY="62.0" prefHeight="26.0" prefWidth="340.0" promptText="Search Doctors" />
         <ListView fx:id="listView" layoutX="181.0" layoutY="132.0" prefHeight="386.0" prefWidth="580.0" />
         
         <RadioButton fx:id="sortRatingHighestBtn" layoutX="240.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleSortButtonClicked" text="Rating(Highest)">
            <font>
               <Font size="10.0" />
            </font>
            <toggleGroup>
               <ToggleGroup fx:id="ratingToggle" />
            </toggleGroup>
         </RadioButton>
         
         <RadioButton fx:id="sortRatingLowestBtn" layoutX="338.0" layoutY="100.0" mnemonicParsing="true" onAction="#handleSortButtonClicked" text="Rating(Lowest)" toggleGroup="$ratingToggle">
            <font>
               <Font size="10.0" />
            </font>
         </RadioButton>
         
         <Text layoutX="181.0" layoutY="111.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sort By" />
         <ComboBox fx:id="specialtyFilter" layoutX="597.0" layoutY="63.0" onAction="#handleComboBoxEvent" prefHeight="26.0" prefWidth="165.0"/>
         <Button fx:id="clearFiltersBtn" layoutX="780.0" layoutY="64.0" mnemonicParsing="false" text="Clear Filters" onAction="#resetFilters" />
         
      </children>
   </AnchorPane>

</StackPane>
